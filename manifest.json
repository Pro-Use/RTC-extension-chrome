{
    "name": "Real Time Constraints",
    "version": "0.3",
    "description": "Arebyte - Real Time Constraints",
    "permissions": ["storage", "declarativeContent", "alarms"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": { 
            "16": "icons/rtc-16.png",
            "24": "icons/rtc-24.png",
            "32": "icons/rtc-32.png",
            "48": "icons/rtc-48.png",
            "128": "icons/rtc-128.png"
       }
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.youtube.com/iframe_api https://s.ytimg.com/yts/jsbin/www-widgetapi-vflUjHiIA/www-widgetapi.js; object-src 'self'"
}
